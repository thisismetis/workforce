<h2> Edit Profile </h2>
<div>
  <%= form_for(@profile, url: [@user, :profile]) do |form| %>
    <%= form.file_field :avatar %>
    <%= form.text_area :about, placeholder: "About" %>
    Birthday: <%= form.date_field :birthday %>
    Start Date: <%= form.date_field :start_date %>
    <%= form.submit "Update Profile" %>
  <% end %>
</div>

<br>

<div>
  <%= form_for(@job_title_user) do |form| %>
    <%= form.hidden_field :user_id, value: @user.id %>
    <%= form.collection_select :job_title_id, JobTitle.all, :id, :name, include_blank: true %>
    <%= form.submit "Update Job Title" %>
  <% end %>
</div>
